<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" prefHeight="220.0" prefWidth="320.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.fx.controller.EditTeamStatsFormController"
      spacing="12">
   <children>
      <Label alignment="TOP_CENTER" text="Edit Team Stats" translateY="-5.0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="lblTeamId" text="1 - Team A" alignment="CENTER" style="-fx-font-weight: bold;" />
         <TextField fx:id="txtGamesWon" alignment="CENTER" promptText="Games Won">
               <VBox.margin>
               <Insets left="30.0" right="30.0" top="8.0"/>
               </VBox.margin>
         </TextField>
         <TextField fx:id="txtGamesLoss" alignment="CENTER" promptText="Games Lost">
               <VBox.margin>
               <Insets left="30.0" right="30.0" top="8.0"/>
               </VBox.margin>
         </TextField>
         <TextField fx:id="txtGamesDrawn" alignment="CENTER" promptText="Games Drawn">
               <VBox.margin>
               <Insets left="30.0" right="30.0" top="8.0"/>
               </VBox.margin>
         </TextField>
         <TextField fx:id="txtTitles" alignment="CENTER" promptText="Titles">
               <VBox.margin>
               <Insets left="30.0" right="30.0" top="8.0"/>
               </VBox.margin>
         </TextField>
        <HBox spacing="18" alignment="CENTER">
            <Button fx:id="btnConfirm" text="Confirm" onAction="#onConfirm" style="-fx-background-color: #48bb78; -fx-text-fill: white;"/>
            <Button fx:id="btnCancel" text="Cancel" onAction="#onCancel" style="-fx-background-color: #e53e3e; -fx-text-fill: white;"/>
        </HBox>
   </children>
</VBox>
