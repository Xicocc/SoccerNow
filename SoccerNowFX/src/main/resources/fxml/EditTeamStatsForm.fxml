<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="352.0" prefWidth="402.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.fx.controller.EditTeamStatsFormController"
      spacing="12">
   <children>
      <Label alignment="TOP_CENTER" text="Edit Team Stats" translateY="-5.0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="lblTeamId" text="1 - Team A" alignment="CENTER" style="-fx-font-weight: bold;" />
        <TextField fx:id="txtGamesWon" alignment="CENTER" promptText="Games Won">
            <VBox.margin>
            <Insets left="30.0" right="30.0" top="8.0"/>
            </VBox.margin>
        </TextField>
        <ButtonBar prefHeight="40.0" prefWidth="300.0" translateY="10.0">
        <buttons>
            <Button fx:id="btnConfirm" mnemonicParsing="false" text="Confirm" translateX="-125.0" onAction="#onConfirm" />
            <Button fx:id="btnCancel" mnemonicParsing="false" text="Cancel" translateX="-125.0" onAction="#onCancel" />
        </buttons>
        </ButtonBar>
   </children>
</VBox>
