<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" prefHeight="180.0" prefWidth="320.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.fx.controller.EditChampionshipFormController"
      spacing="12">
    <children>
        <Label alignment="TOP_CENTER" text="Edit Championship Status">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label fx:id="lblChampionshipId" text="ID - Name" alignment="CENTER" style="-fx-font-weight: bold;" />
        <ComboBox fx:id="comboStatus" promptText="Status">
            <VBox.margin>
                <Insets left="25.0" right="25.0" top="5.0"/>
            </VBox.margin>
        </ComboBox>
        <HBox spacing="18" alignment="CENTER">
            <Button fx:id="btnConfirm" text="Confirm" onAction="#onConfirm" style="-fx-background-color: #48bb78; -fx-text-fill: white;"/>
            <Button fx:id="btnCancel" text="Cancel" onAction="#onCancel" style="-fx-background-color: #e53e3e; -fx-text-fill: white;"/>
        </HBox>
    </children>
</VBox>
