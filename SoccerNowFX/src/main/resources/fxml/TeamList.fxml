<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="402.0" minWidth="602.0"
            prefHeight="402.0" prefWidth="602.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.soccernow.fx.controller.TeamListController">
    <center>
        <TableView fx:id="tableTeams" minHeight="200.0" minWidth="200.0" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colID" text="ID" />
                <TableColumn fx:id="colName" text="Name" />
                <TableColumn fx:id="colWins" text="Wins" />
                <TableColumn fx:id="colNumPlayers" text="Players" />
                <TableColumn fx:id="colPlayers" text="Players" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="2" BorderPane.alignment="CENTER">
            <Label text="To edit, delete, add a player or remove a player, please select a team from the list."
                   alignment="CENTER"
                   style="-fx-font-weight: bold;"/>
            <HBox alignment="CENTER" spacing="5.0" prefHeight="35.0" prefWidth="602.0" BorderPane.alignment="CENTER">
                <Button fx:id="btnBack" mnemonicParsing="false" text="Go Back" onAction="#handleBack" prefWidth="100.0"/>
                <Button fx:id="btnAddTeam" mnemonicParsing="false" text="Add Team" onAction="#handleAddTeam" prefWidth="100.0"/>
                <Button fx:id="btnEditTeam" mnemonicParsing="false" text="Edit Team" onAction="#handleEditTeam" prefWidth="100.0"/>
                <Button fx:id="btnDeleteTeam" mnemonicParsing="false" text="Delete Team" onAction="#handleDeleteTeam" prefWidth="100.0"/>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0" prefHeight="30.0" prefWidth="602.0" BorderPane.alignment="CENTER">
                <Button fx:id="btnAddPlayerToTeam" mnemonicParsing="false" text="Add Player to Team" onAction="#handleAddPlayerToTeam" prefWidth="135.0"/>
                <Button fx:id="btnRemovePlayerFromTeam" mnemonicParsing="false" text="Remove Player from Team" onAction="#handleRemovePlayerFromTeam" prefWidth="175.0"/>
            </HBox>
                <padding>
                    <Insets bottom="15.0"/>
                </padding>
        </VBox>
    </bottom>
</BorderPane>
