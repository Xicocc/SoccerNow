<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" prefHeight="202.0" prefWidth="302.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.fx.controller.AddTeamFormController">
   <children>
      <Label alignment="TOP_CENTER" text="Add Team" translateY="-15.0">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="txtName" alignment="CENTER" promptText="Name" scaleY="0.9" translateY="-10.0">
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="5.0" />
         </VBox.margin>
      </TextField>
      <HBox alignment="CENTER" spacing="18">
         <children>
            <Button fx:id="btnConfirm" mnemonicParsing="false" text="Confirm" onAction="#onConfirm" style="-fx-background-color: #48bb78; -fx-text-fill: white;"/>
            <Button fx:id="btnCancel" mnemonicParsing="false" text="Cancel" onAction="#onCancel" style="-fx-background-color: #e53e3e; -fx-text-fill: white;"/>
         </children>
      </HBox>
   </children>
</VBox>
