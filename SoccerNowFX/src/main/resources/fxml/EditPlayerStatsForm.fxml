<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" prefHeight="352.0" prefWidth="402.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.fx.controller.EditPlayerStatsFormController"
      spacing="12">
   <children>
      <Label alignment="TOP_CENTER" text="Edit Player Stats" translateY="-5.0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="lblPlayerId" text="1 - John Doe" alignment="CENTER" style="-fx-font-weight: bold;" />
        <TextField fx:id="txtGamesPlayed" alignment="CENTER" promptText="Games Played">
            <VBox.margin>
            <Insets left="30.0" right="30.0" top="8.0"/>
            </VBox.margin>
        </TextField>
        <TextField fx:id="txtGoals" alignment="CENTER" promptText="Goals">
            <VBox.margin>
            <Insets left="30.0" right="30.0" top="8.0"/>
            </VBox.margin>
        </TextField>
      <TextField fx:id="txtYellowCards" alignment="CENTER" promptText="Yellow Cards">
         <VBox.margin>
            <Insets left="30.0" right="30.0" top="8.0"/>
         </VBox.margin>
      </TextField>
      <TextField fx:id="txtRedCards" alignment="CENTER" promptText="Red Cards">
         <VBox.margin>
            <Insets left="30.0" right="30.0" top="8.0"/>
         </VBox.margin>
      </TextField>
        <HBox spacing="18" alignment="CENTER">
            <Button fx:id="btnConfirm" text="Confirm" onAction="#onConfirm" style="-fx-background-color: #48bb78; -fx-text-fill: white;"/>
            <Button fx:id="btnCancel" text="Cancel" onAction="#onCancel" style="-fx-background-color: #e53e3e; -fx-text-fill: white;"/>
        </HBox>
   </children>
</VBox>
